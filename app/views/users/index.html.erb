<div class="topbar clearfix">
  <%= link_to "Back", root_path, :class=>"topbar-btn topbar-back fleft" %>
  <span class="toplogo"><%= link_to 'Qwest', root_path %></span>
</div>

<ul class="quest-list user-list">
  <% @top_users.each_with_index do |user, i| %>
    <li>
      <%= link_to user do %>
        <p class="number fleft">#<%= i + 1 %></p>
        <%= user_fb_picture(user, 'square', :class => ' avatar fleft') %>
        <p class="fleft username"><%= user.username %></p>
        <p class="fright cp"><%= user.cp %> CPs</p>
        <div class="clear"></div>
      <% end %>
    </li>
  <% end %>
</ul>
